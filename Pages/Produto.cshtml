@page
@model Ex4_ListaDeProdutosRazor.Pages.ProdutoModel
@{
    ViewData["Title"] = "Produtos";
}

<h2>@ViewData["Title"]</h2>

<div style="display: flex; justify-content: space-between; width: 100%">
    <table style="width: 50%;">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Preço</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var produto in Model.ListaDeProdutos)
            {
                <tr>
                    <td>@produto.Nome</td>
                    <td>R$@produto.Preco</td>
                </tr>
            }
        </tbody>
    </table>

    <form method="post" style="width: 30%; display: flex; flex-direction: column; justify-content: space-between; height: 200px;">
        <p>Adicionar Produto</p>
        <div>
            <label>Nome do Produto:</label>
            <input asp-for="NovoProduto.Nome" required />
        </div>
        <div>
            <label>Preço do Produto:</label>
            <input asp-for="NovoProduto.Preco" type="number" step="0.01" required />
        </div>
        <button type="submit">Adicionar Produto</button>
    </form>
</div>
