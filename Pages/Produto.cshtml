@page
@model Ex4_ListaDeProdutosRazor.Pages.ProdutoModel
@{
    ViewData["Title"] = "Produtos";
}

<h2>@ViewData["Title"]</h2>

<table style="width: 100%;">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Preço</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var produto in Model.Produtos)
        {
            <tr>
                <td>@produto.Nome</td>
                <td>R$@produto.Preco</td>
            </tr>
        }
    </tbody>
</table>
